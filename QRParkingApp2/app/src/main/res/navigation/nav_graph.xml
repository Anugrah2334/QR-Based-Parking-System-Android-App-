<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    app:startDestination="@id/FirstFragment">

    <fragment
        android:id="@+id/FirstFragment"
        android:name="com.example.qrparking.FirstFragment"
        android:label="First Fragment"
        tools:layout="@layout/fragment_first">

        <!-- Navigation action to RegisterFragment -->
        <action
            android:id="@+id/action_FirstFragment_to_RegisterFragment"
            app:destination="@id/RegisterFragment" />
    </fragment>

    <fragment
        android:id="@+id/RegisterFragment"
        android:name="com.example.qrparking.RegisterFragment"
        android:label="Register Fragment"
        tools:layout="@layout/fragment_register" />
</navigation>
